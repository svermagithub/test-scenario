import java.io.File;

public class DirectoryScanner {
    public static void main(String[] args) {
        File currentDirectory = new File(System.getProperty("user.dir"));
        findAndPrintAllSubdirectoriesAndFiles(currentDirectory);
    }

    public static void findAndPrintAllSubdirectoriesAndFiles(File directory) {
        File[] files = directory.listFiles();

        if (files != null) {
            for (File file : files) {
                if (file.isDirectory() && file.getName().equals("Landing_zone")) {
                    // Found the Landing_zone directory
                    listAllSubdirectoriesAndFiles(file);
                    return;
                }
            }

            // Recursively search in the parent directory
            File parentDirectory = directory.getParentFile();
            if (parentDirectory != null) {
                findAndPrintAllSubdirectoriesAndFiles(parentDirectory);
            }
        }
    }

    public static void listAllSubdirectoriesAndFiles(File directory) {
        System.out.println("Listing subdirectories and files inside Landing_zone directory:");
        listSubdirectoriesAndFilesRecursively(directory);
    }

    public static void listSubdirectoriesAndFilesRecursively(File directory) {
        File[] files = directory.listFiles();

        if (files != null) {
            for (File file : files) {
                if (file.isDirectory()) {
                    System.out.println("Subdirectory: " + file.getName());
                    listSubdirectoriesAndFilesRecursively(file);
                } else {
                    System.out.println("File: " + file.getName());
                }
            }
        }
    }
}
